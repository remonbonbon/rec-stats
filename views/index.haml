!!!
%html(lang="ja")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1")
    %title Rec Stats
    %link(rel="stylesheet" href="vendor/bootstrap/css/bootstrap.min.css")
    %link(rel="stylesheet" href="app.css")
    %link(rel="shortcut icon" href="favicon.ico")
  %body#app.container
    %h1 Rec Stats

    %section
      %h3 Storage
      %div(v-cloak="")
        %span {{storage.used}} / {{storage.total}}{{storage.unit}}
        %div.progress
          %div.progress-bar(role="progressbar" aria-valuenow="{{storage.percentage}}" aria-valuemin="0" aria-valuemax="100" style="width: {{storage.percentage}}%;")
            {{storage.percentage}}%

    %section
      %h3 Machine status
      #graph

    %section
      %h3 Reserves
      %table.table.table-condensed.table-striped(v-cloak="")
        %thead
          %tr
            %th #
            %th start time
            %th channel
            %th title
        %tbody
          %tr(v-repeat="reserves")
            %td {{$index + 1}}
            %td {{startTime}}
            %td {{channel}}
            %td {{title}}

    %script(src="vendor/jquery/jquery-2.1.3.min.js")
    %script(src="vendor/bootstrap/js/bootstrap.min.js")
    %script(src="vendor/vuejs/vue.min.js")
    %script(src="vendor/d3/d3.min.js")
    %script(src="app.js")
